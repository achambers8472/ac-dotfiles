startup_message off
term screen-256color

hardstatus off
hardstatus alwayslastline
hardstatus string '%{= kG}[ %{G}%H %{g}][%= %{= kw}%?%-Lw%?%{r}(%{W}%n*%f%t%?(%u)%?%{r})%{w}%?%+Lw%?%?%= %{g}][%{B} %m-%d %{W} %c %{g}]'

bind j focus down
bind k focus up
bind l focus right
bind h focus left

screen -t localhost
screen -t ipython ipython
screen -t erwin ssh erwin
screen -t phoenix ssh phoenix
screen -t isaac ssh isaac
screen -t eddie ssh eddie
screen -t raijin ssh raijin
screen -t magnus ssh magnus
screen -t hlrn-hannover ssh hlrn-hannover
screen -t hlrn-berlin ssh hlrn-berlin
select 0
