#!/usr/bin/env python

import string
import random
import argparse

parser = argparse.ArgumentParser(description="Generate a random password.")
parser.add_argument("--no-symbols", action="store_true", help="Don't use symbols in password")
args = parser.parse_args()

length = 16

bases = [string.letters, string.digits]

if not args.no_symbols:
    bases.append(string.punctuation)

basis = ''.join(bases)

print ''.join([random.choice(basis) for x in range(length)])
