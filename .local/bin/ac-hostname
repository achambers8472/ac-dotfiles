#!/usr/bin/env bash

case "${HOSTNAME}" in
	eddie*) echo "eddie" ; exit 0 ;;
	erwin*) echo "erwin" ; exit 0 ;;
	isaac*) echo "isaac" ; exit 0 ;;
	*phoenix*) echo "phoenix" ; exit 0 ;;
	kraft) echo "kraft" ; exit 0 ;;
	frost) echo "frost" ; exit 0 ;;
esac

if [[ ! -z "${IVEC_CLUSTER:-}" ]] ; then
	echo "${IVEC_CLUSTER}" ; exit 0
fi

if  [[ ! -z "${SLURM_CLUSTER_NAME:-}" ]] ; then
	case "${SLURM_CLUSTER_NAME}" in
		phoenix) echo "phoenix" ; exit 0 ;;
	esac
fi

case "${USER}" in
	ajc566)
	echo "raijin" ; exit 0 ;;
	hhpchamb)
	echo "hlrn" ; exit 0 ;;
esac

echo "unknown" ; exit 1
