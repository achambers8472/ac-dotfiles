#!/usr/bin/env bash

set -o errexit
set -o pipefail
set -o nounset

# tmux new-window -n "emacs" "while true ; do emacs -nw ; sleep 30 ; done"
# tmux select-pane -t 0

tmux new-window -n "vim" "while true ; do vim ; sleep 30 ; done"
tmux select-pane -t 0

tmux new-window -n "IPython" "while true ; do ipython ; sleep 30 ; done"
tmux select-pane -t 0

tmux new-window -n "htop" "while true ; do htop ; sleep 30 ; done"
tmux select-pane -t 0

tmux new-window -n "ncdu" "while true ; do ncdu -x '${HOME}' ; sleep 30 ; done"
tmux select-pane -t 0

tmux new-window -n "mc" "while true ; do mc ; sleep 30 ; done"
tmux select-pane -t 0
