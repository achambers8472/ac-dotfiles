#!/usr/bin/env bash
source "${HOME}/.local/lib/ac-bash-preamble" || exit 1

curl -fLo ~/.vim/autoload/plug.vim --create-dirs https://raw.githubusercontent.com/junegunn/vim-plug/master/plug.vim
vim +PlugInstall +qall

mkdir --parents "${HOME}/.texmf/tex/latex"
ln --symbolic "${HOME}/.opt/ac-tex" "${HOME}/.texmf/tex/latex/ac-tex"

mkdir --parents "${HOME}/.texmf/bibtex/bib"
ln --symbolic "${HOME}/.opt/ac-bib/bib/ref.bib" "${HOME}/.texmf/bibtex/bib/ref.bib"

# Make sure permissions are correct
chmod 700 "${HOME}/.ssh"
chmod 600 ${HOME}/.ssh/*
